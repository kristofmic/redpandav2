<div class='row flash'>
<%= render 'layouts/errors', object: @user %>
</div>

<div class='row'>
	<div class='col-md-6 col-md-offset-3'>
		<h3 class='form-heading'>Join</h3>  
	</div>
</div>

<div class='row'>
	<div class='col-lg-6 col-lg-offset-3'>
		<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
			<div class='form-group'>
				<%= f.label :email, class: 'control-label'%>
				<%= f.text_field :email, class: 'form-control', placeholder: 'bamboo@redpanda.com', autofocus: true %>
			</div>
			<div class='form-group'>
				<%= f.label :password, class: 'control-label'%>
				<%= f.password_field :password, class: 'form-control', placeholder: 'Bamboo4Life!' %>
			</div>
			<div class='form-group'>
				<%= f.label :password_confirmation, class: 'control-label'%>
				<%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Bamboo4Life!' %>
			</div>
			<div class='form-group'>
				<%= f.submit 'Giddy up!', class: 'btn btn-danger' %>
			</div>
		<% end %>
	</div>
</div>