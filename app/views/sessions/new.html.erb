
<div class='row'>
	<div class='col-md-6 col-md-offset-3'>
		<h3 class='form-heading'>Sign in</h3>  
	</div>
</div>

<div class='row'>
	<div class='col-lg-6 col-lg-offset-3'>
		<%= form_tag login_path, class: 'form-horizontal' do %>
			<div class='form-group'>
				<%= label_tag 'email', 'Email', class: 'control-label'%>
				<%= text_field_tag 'email', nil, class: 'form-control', placeholder: 'bamboo@redpanda.com', autofocus: true%>
			</div>
			<div class='form-group'>
				<%= label_tag 'password', 'Password', class: 'control-label'%>
				<%= password_field_tag 'password', nil, class: 'form-control', placeholder: 'Bamboo4Life!' %>
			</div>
			<div class='form-group'>
				<%= submit_tag 'Giddy up!', class: 'btn btn-danger' %>
			</div>
		<% end %>
	</div>
</div>